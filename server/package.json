{
  "name": "node-express-prisma-starter-template",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "esbuild src/server.ts --bundle --platform=node --packages=external --outfile=dist/server.js --format=esm",
    "build:full": "cd ../client && npm run build && rm -rf ../server/public && cp -r dist ../server/public && cd ../server && npm run build",
    "dev": "pnpm run build --watch & nodemon --watch dist/server.js --exec 'node dist/server.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
